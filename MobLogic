using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class MobLogic : MonoBehaviour
{

  [Header("Stats")]
  public int health;
  public float moveSpeed;

  [Header("Bools")]
  public bool shouldIdle,
  shouldChase,
  shouldWander,
  shouldShoot,
  shouldGib,
  shouldDropItems;

  //States
  [Header("Idle")]
  public bool blockWhenIdle;
  private bool willBlock;

  [Header("Chase")]
  public float rangeToChase;

  [Header("Wander")]
  private bool wanderTick = false;
  public float wanderLength, pauseLength;
  private float wanderCounter, pauseCounter, panicCounter;
  private Vector3 wanderDirection;

  [Header("Shoot")]
  public GameObject bullet;
  public Transform firePoint;

  [Header("Gibbing")]
  public bool shouldLeaveCorpse;
  public GameObject[] corpses;
  public GameObject hitEffect;
  public GameObject[] splatters;

  [Header("Drops")]
  public GameObject[] itemsToDrop;
  public float itemDropPercent;

  [Header("Tools")]
  public Rigidbody2D theRB;
  public Animator anim;
  public SpriteRenderer theBody;

  [Header("GFX")]
  private Vector3 moveDirection;

  //Enums
  enum State {Idle, Chase, Wamder, Patrol, Shoot};

  //Wake
  private void Awake()
  {
    instance = this;
  }

  void Start()
  {       
    State curState = State.Idle;
  }

  void Update()
  {
    switch(curState)
    {
      case Idle:
        print("I am bored")
        break;
          
      case Chase:
        print("Come back here!")
        break;
          
      case Wander:
        print("I'm the kind of sprite, who likes to roam around")
        break;
          
      case Patrol:
        print("Hut, hut, hut, hut, hut, hut, hut")
        break;
      
      case Shoot:
        print("Pew Pew")
        break;
    }
  }
}
